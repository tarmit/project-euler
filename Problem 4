/*
Problem 4
Find the largest palindrome made from the product of two 3-digit numbers.
*/


function isPal(x){
  var reverse = parseInt(x.toString().split('').reverse().join(''));
  
  if(x === reverse){
  	return true;
  }else{return false;}
}

var x, y, product, max = 0;

for(x = 100; x <= 999; x++){
	for(y = 100; y <= 999; y++){
  	product = x * y;
    if(isPal(product)){
    	if(max < product){
      	max = product;
        console.log(x + " * " + y + " = " + product);
      } 
    }
  }
}
